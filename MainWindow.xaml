<Window x:Class="ViewerBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewerBuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0"> 
            <Button Padding="3" Margin="5" Name="btnOpenFile" Click="btnOpenFile_Click">Vyberte IFC soubor</Button>
            <TextBlock x:Name="txtFilePath"></TextBlock>
        </DockPanel>
        <TextBlock Grid.Row="1"  Margin="5" Name="txtLog" TextWrapping="Wrap">
            
        </TextBlock>
    </Grid>
</Window>
